<resources>
    <!-- Base application theme. -->
    <style name="Theme.Celebio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/pink_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/pink_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Celebio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Celebio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Celebio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>